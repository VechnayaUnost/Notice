<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppThemeOrange" parent="AppTheme">
        <item name="colorAccent">@color/colorOrange</item>
        <item name="colorControlActivated">@color/colorOrange</item>
    </style>

    <style name="AppThemeBlack" parent="AppTheme">
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="SpinnerWithoutArrow" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
