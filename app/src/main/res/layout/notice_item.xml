<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle"
    android:id="@+id/cv_item_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tv_item_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/cb_item_note_status"
            android:singleLine="true"
            android:textSize="20sp"
            android:textColor="#424242"
            />

        <TextView
            android:id="@+id/tv_item_note_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_note_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/cb_item_note_status"
            android:singleLine="true"
            />

        <CheckBox
            android:id="@+id/cb_item_note_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tv_item_note_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_note_description"
            android:singleLine="true"
            android:textColor="#BDBDBD"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_item_note_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_item_note_description"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>